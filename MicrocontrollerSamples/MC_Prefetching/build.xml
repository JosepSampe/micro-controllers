<project>
	
	<target name="common">
		<mkdir dir="bin" />
	</target>

	<target name="prefetching">
		<javac srcdir="src/com/urv/vertigo/mc/prefetching/" destdir="bin" includeantruntime="false">
			<classpath>
		        <pathelement 
		        	path="lib/DockerDaemon.jar"/>
				<pathelement 
					path="lib/json-simple-1.1.1.jar"/>
			</classpath>		</javac>

	     <jar destfile="bin/prefetching-1.0.jar" 
	          basedir="bin"
	     	  includes="com/urv/vertigo/mc/prefetching/*">
	     </jar>
	</target>
	
	<target name="clean">
		<delete dir="bin" />
	</target>
	
	<target name="cleancom">
			<delete dir="bin/com" />
	</target>
	
	<target name="build" depends="clean, common, prefetching, cleancom"/>
	
</project>