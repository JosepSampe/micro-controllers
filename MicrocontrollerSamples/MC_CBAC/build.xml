<project>
	
	<target name="common">
		<mkdir dir="bin" />
	</target>

	<target name="cbac">
		<javac srcdir="src/com/urv/vertigo/mc/cbac/" destdir="bin" includeantruntime="false">
			<classpath>
		        <pathelement 
		        	path="lib/DockerDaemon.jar"/>
			</classpath>		
		</javac>

	     <jar destfile="bin/cbac-1.0.jar" 
	          basedir="bin"
	     	  includes="com/urv/vertigo/mc/cbac/*">
	     </jar>
	</target>
	
	<target name="clean">
		<delete dir="bin" />
	</target>
	
	<target name="cleancom">
			<delete dir="bin/com" />
	</target>
	
	<target name="build" depends="clean, common, cbac, cleancom"/>

</project>